#:import NoTransition kivy.uix.screenmanager.NoTransition
<Language>:
    FloatLayout:

        MDLabel:
            text: "Выберите язык"
            halign: "center"
            font_style: "H5"
            size_hint_y: None
            pos_hint:{"top":0.9}

        FloatLayout:
            id:lng


            MDRoundFlatButton:
                size_hint_x: 0.6
                id: next
                text: "Next"
                theme_text_color: 'Custom'
                md_bg_color: 0, 0, 0, 1
                text_color: 1, 1, 1 ,1
                pos_hint:{"center_x":0.5, "center_y": 0.05}
                disabled: False
                on_press:
                    app.root.transition=NoTransition()
                    root.manager.current = 'gender'