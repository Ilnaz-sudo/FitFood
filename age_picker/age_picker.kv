<AgePicker>:
    orientation: "vertical"

    RelativeLayout:
        size_hint_y: None
        height: "280dp"

        canvas.after:
            Color:
                rgba: 0.2, 0.6, 0.9, 0.3  # Полупрозрачный синий
            Rectangle:
                size: self.width, dp(1)
                pos: self.x, self.center_y + dp(12)
            Rectangle:
                size: self.width, dp(1)
                pos: self.x, self.center_y - dp(18)

        ScrollView:
            id: rv
            bar_width: 0
            do_scroll_x: False
            do_scroll_y: True

            BoxLayout:
                id: rv_layout

                spacing: 0
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height








